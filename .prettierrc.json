{
  "arrowParens": "always",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 100,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "plugins": [
    "./core/packages/prettier-plugin-typespec/dist/index.js",
    "./core/packages/compiler/node_modules/prettier-plugin-organize-imports/index.js"
  ],
  "overrides": [
    {
      "files": "*.tsp",
      "options": {
        "parser": "typespec"
      }
    }
  ]
}
