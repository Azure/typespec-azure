{
  "name": "@azure-tools/typespec-metadata",
  "version": "0.1.0",
  "description": "TypeSpec emitter that produces structured metadata snapshots for APIView and other tooling.",
  "type": "module",
  "license": "MIT",
  "author": "Azure SDK Tools",
  "keywords": [
    "typespec",
    "emitter",
    "metadata",
    "apiview"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Azure/azure-sdk-tools",
    "directory": "tools/apiview/emitters/typespec-metadata"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit --pretty",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  },
  "peerDependencies": {
    "@typespec/compiler": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typespec/compiler": "1.4.0",
    "@vitest/ui": "^4.0.16",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
