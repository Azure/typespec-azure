{
  "name": "typespec-azure-vscode",
  "displayName": "typespec azure",
  "description": "the extension for azure typespec",
  "publisher": "typespec",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/typespec-azure.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "extensionDependencies": [
    "typespec.typespec-vscode"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typespec",
    "workspaceContains:**/tspconfig.yaml"
  ],
  "main": "./dist/src/extension.cjs",
  "preview": true,
  "contributes": {
    "languages": [
      {
        "id": "typespec",
        "aliases": [
          "TypeSpec",
          "TYPESPEC"
        ],
        "extensions": [
          ".tsp"
        ],
        "icon": {
          "light": "./icons/tsp-file.light.svg",
          "dark": "./icons/tsp-file.dark.svg"
        },
        "configuration": "./dist/language-configuration.json"
      },
      {
        "id": "markdown-typespec"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && tsx ./scripts/build.ts",
    "check-types": "tsc --noEmit",
    "build": "npm run compile && npm run package-vsix",
    "package-vsix": "vsce package",
    "watch": "tsx ./scripts/build.ts --watch",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "lint": "eslint .  --max-warnings=0",
    "lint:fix": "eslint . --fix "
  },
  "devDependencies": {
    "@types/vscode": "~1.100.0",
    "@types/node": "~22.13.11",
    "@vscode/vsce": "~3.3.0",
    "esbuild": "^0.25.1",
    "typescript": "~5.8.2"
  }
}
